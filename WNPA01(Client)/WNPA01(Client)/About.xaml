<Window x:Class="WNPA01_Client_.About"
                xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStyle="None"
        ResizeMode="NoResize"
        ShowInTaskbar="True"
        Background="#2B2B2B"
        Width="800" Height="500">


    <Grid>

        <StackPanel Margin="40" VerticalAlignment="Center">

            <TextBlock Text="Final Assignment"
                       FontSize="32"
                       FontWeight="Bold"
                       Foreground="White"
                       HorizontalAlignment="Center"/>

            <TextBlock Text="Developed By:"
                       Margin="0,20,0,5"
                       FontSize="20"
                       Foreground="#CCCCCC"
                       HorizontalAlignment="Center"/>

            <TextBlock Text="• Nicholas Reilly&#x0a;• Rodrigo Pichara&#x0a;• Jules Shala"
                       FontSize="22"
                       Foreground="White"
                       TextAlignment="Center"/>

            <Border Background="#3A3A3A"
                    Padding="20"
                    CornerRadius="8"
                    Margin="0,30,0,0">
                <TextBlock Text=" This is the About Page for our assignment."
                           Foreground="#DDDDDD"
                           FontSize="16"
                           TextWrapping="Wrap"/>
            </Border>

        </StackPanel>
        <Button Name="ExitBtn" Click="ExitBtn_Click" Content="Exit" HorizontalAlignment="Center" Margin="0,435,0,0" VerticalAlignment="Top" Width="121"/>

    </Grid>
</Window>
